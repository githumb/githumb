{
    "dust": {
        "helpers": [
            "dust-makara-helpers"
        ]
    },
    "express": {
        "view cache": false,
        "view engine": "js",
        "views": "path:./.build/templates"
    },
    "githumb": {
        "bot": {
            "admins": [
                "andes90",
                "gde.satrigraha",
                "hendra"
            ]
        },
        "ulartangga_url": "http://www.google.com"
    },
    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "en-US"
    },
    "middleware": {
        "appsec": {
            "module": {
                "arguments": [
                    {
                        "csp": false,
                        "p3p": false,
                        "xframe": "SAMEORIGIN"
                    }
                ]
            }
        },
        "csrf": {
            "enabled": true,
            "module": {
                "arguments": [
                    {}
                ],
                "method": "csrf",
                "name": "lusca"
            },
            "priority": 111,
            "route": "/((?!payload))*"
        },
        "makara": {
            "enabled": true,
            "module": {
                "arguments": [
                    {
                        "i18n": "config:i18n",
                        "specialization": "config:specialization"
                    }
                ],
                "name": "makara"
            },
            "priority": 100
        },
        "router": {
            "module": {
                "arguments": [
                    {
                        "directory": "path:./controllers"
                    }
                ]
            }
        },
        "static": {
            "module": {
                "arguments": [
                    "path:./.build"
                ]
            }
        }
    },

    "specialization": {},
    "view engines": {
        "js": {
            "module": "makara",
            "renderer": {
                "arguments": [
                    {
                        "cache": true,
                        "helpers": "config:dust.helpers"
                    }
                ],
                "method": "js"
            }
        }
    },

    "githumb": {
        "bot": {
            "admins": ["andes90", "gde.satrigraha", "hendra", "vt.githumb"]
        },
        "github": {
            "username": "githumbot",
            "password": "githumb123"
        }
    }
}
